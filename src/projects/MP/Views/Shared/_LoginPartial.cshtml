@using Microsoft.AspNetCore.Identity
@using MP.Entities

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject RoleManager<IdentityRole> RoleManager

@if (SignInManager.IsSignedIn(User))
{
    <ul class="navbar-nav mx-auto">
        
        <li class="nav-item">
            <a class="nav-link" asp-controller="WxApp" asp-action="Index">小程序</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="WxBox" asp-action="BoxDetails">盒子配置</a>
        </li>
    </ul>

    <form asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" id="logoutForm" class="form-inline my-2 my-lg-0">
        <a asp-controler="Account" asp-action="Manage" class="btn btn-link navbar-btn navbar-link">@UserManager.GetUserName(User)</a>
        <button type="submit" class="btn btn-link navbar-btn navbar-link">退出</button>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right ml-auto">
        <li><a asp-controller="Account" asp-action="Login">登录</a></li>
    </ul>
}
